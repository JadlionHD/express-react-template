  "author": "JadlionHD <jadlion.dev@gmail.com>",
  "scripts": {
    "dev:vite": "vite",
    "build:vite": "tsc && vite build",
    "lint:vite": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview:vite": "vite preview",
    "build:react": "cd frontend && rimraf dist && vite build",
